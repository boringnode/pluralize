{
  "name": "@boringnode/pluralize",
  "description": "A TypeScript port of Doctrine Inflector to pluralize and singularize English words",
  "version": "0.1.0",
  "engines": {
    "node": ">=20.6"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build"
  ],
  "exports": {
    ".": "./build/index.js",
    "./builder": "./build/src/builder.js"
  },
  "scripts": {
    "build": "yarn clean && tsup-node",
    "clean": "del-cli build",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "prepublishOnly": "yarn build",
    "release": "yarn dlx release-it",
    "test": "c8 yarn quick:test",
    "quick:test": "yarn node --import ts-node-maintained/register/esm --enable-source-maps bin/test.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/assert": "^4.2.0",
    "@japa/runner": "^4.4.0",
    "@swc/core": "^1.15.7",
    "@types/node": "^20.17.19",
    "c8": "^10.1.3",
    "del-cli": "^7.0.0",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "release-it": "^19.1.0",
    "ts-node-maintained": "^10.9.6",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "author": "Romain Lanz <romain.lanz@pm.me>",
  "license": "MIT",
  "keywords": [
    "pluralize",
    "singularize",
    "inflector",
    "plural",
    "singular"
  ],
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  },
  "packageManager": "yarn@4.12.0"
}
